<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activityImage"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
       />

        <TextView
            android:id="@+id/dateEvent"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/activityImage"
            android:textColor="@color/lightGreyDebox" />
        <TextView
            android:id="@+id/sizeEvent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textColor="@color/niceRedDebox" />
        <TextView
            android:id="@+id/titleEvent"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@id/dateEvent"
            android:layout_toRightOf="@id/activityImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blueDarkDebox" />
        <TextView
            android:id="@+id/previewEvent"
            android:layout_below="@id/titleEvent"
            android:layout_toRightOf="@id/activityImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/lightGreyDebox" />
        <TextView
            android:id="@+id/separatorEvent"
            android:layout_width="match_parent"
            android:layout_below="@id/previewEvent"
            android:background="@color/lightGreyDebox"
            android:layout_height="0.5dp" />


</RelativeLayout>